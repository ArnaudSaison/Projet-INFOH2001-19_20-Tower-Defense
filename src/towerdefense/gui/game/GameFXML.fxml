<BorderPane fx:id="borderPane" maxHeight="-Infinity" maxWidth="-Infinity" minHeight="-Infinity" minWidth="-Infinity" prefHeight="720.0" prefWidth="1280.0" xmlns="http://javafx.com/javafx/11.0.1" xmlns:fx="http://javafx.com/fxml/1" fx:controller="towerdefense.gui.game.GameController">
   <center>
      <StackPane fx:id="gameBox" prefHeight="150.0" prefWidth="200.0" BorderPane.alignment="CENTER">
         <children>
            <Pane fx:id="mapPlaceHolder" onMouseDragged="#handleMouseDraggedMap" onMousePressed="#handleMousePressedDelta" onScroll="#handleZoomScroll" prefHeight="200.0" prefWidth="200.0" />
            <HBox fx:id="gameInfoBar" maxHeight="30.0" minHeight="30.0" prefHeight="30.0" spacing="30.0" StackPane.alignment="TOP_LEFT">
               <StackPane.margin>
                  <Insets bottom="20.0" left="20.0" right="20.0" top="20.0" />
               </StackPane.margin>
               <children>
                  <HBox fx:id="gameRoundInfoBar" alignment="CENTER" prefWidth="50.0" spacing="10.0" styleClass="gameInfoBarItem">
                     <children>
                        <ImageView fitHeight="20.0" fitWidth="20.0" pickOnBounds="true" preserveRatio="true">
                           <image>
                              <Image url="@../../../resources/graphics/bank.png" />
                           </image>
                        </ImageView>
                        <Text strokeType="OUTSIDE" strokeWidth="0.0" text="Round 1" HBox.hgrow="ALWAYS">
                           <font>
                              <Font size="14.0" />
                           </font>
                        </Text>
                     </children>
                     <HBox.margin>
                        <Insets />
                     </HBox.margin>
                     <padding>
                        <Insets bottom="10.0" left="10.0" right="10.0" top="10.0" />
                     </padding>
                  </HBox>
                  <HBox fx:id="gameHealthInfoBar" alignment="CENTER" prefWidth="50.0" spacing="10.0" styleClass="gameInfoBarItem">
                     <children>
                        <ImageView fitHeight="20.0" fitWidth="20.0" pickOnBounds="true" preserveRatio="true">
                           <image>
                              <Image url="@../../../resources/graphics/heart.png" />
                           </image></ImageView>
                        <Text strokeType="OUTSIDE" strokeWidth="0.0" text="654/1000" HBox.hgrow="ALWAYS">
                           <font>
                              <Font size="14.0" />
                           </font></Text>
                     </children>
                     <padding>
                        <Insets bottom="10.0" left="10.0" right="10.0" top="10.0" />
                     </padding>
                  </HBox>
                  <HBox fx:id="gameGoldInfoBar" alignment="CENTER" prefWidth="50.0" spacing="10.0" styleClass="gameInfoBarItem">
                     <children>
                        <ImageView fitHeight="20.0" fitWidth="20.0" pickOnBounds="true" preserveRatio="true">
                           <image>
                              <Image url="@../../../resources/graphics/bank.png" />
                           </image>
                        </ImageView>
                        <Text strokeType="OUTSIDE" strokeWidth="0.0" text="200" HBox.hgrow="ALWAYS">
                           <font>
                              <Font size="14.0" />
                           </font>
                        </Text>
                     </children>
                     <padding>
                        <Insets bottom="10.0" left="10.0" right="10.0" top="10.0" />
                     </padding>
                  </HBox>
                  <Region HBox.hgrow="ALWAYS" />
                  <HBox fx:id="gameGoldInfoBar1" alignment="CENTER" spacing="10.0" styleClass="gameInfoBarItem">
                     <children>
                        <ImageView fitHeight="20.0" fitWidth="20.0" pickOnBounds="true" preserveRatio="true">
                           <image>
                              <Image url="@../../../resources/graphics/bank.png" />
                           </image>
                        </ImageView>
                        <Button mnemonicParsing="false" onMouseClicked="#handleResetViewButton" styleClass="resetViewButton" text="Reset View" />
                     </children>
                     <padding>
                        <Insets bottom="10.0" left="10.0" right="10.0" top="10.0" />
                     </padding>
                  </HBox>
               </children>
            </HBox>
         </children>
      </StackPane>
   </center>
   <top>
      <HBox alignment="CENTER" styleClass="menubar" BorderPane.alignment="CENTER">
         <children>
            <Label alignment="CENTER" contentDisplay="CENTER" styleClass="pagelabel" text="Tower Defense">
               <padding>
                  <Insets bottom="10.0" left="10.0" right="10.0" top="10.0" />
               </padding>
               <font>
                  <Font size="16.0" />
               </font></Label>
            <Button fx:id="quitGameButton" mnemonicParsing="false" onMouseClicked="#handleQuitGameButtonClicked" styleClass="menubarbutton" text="Quit Game">
               <padding>
                  <Insets bottom="10.0" left="10.0" right="10.0" top="10.0" />
               </padding>
               <font>
                  <Font size="16.0" />
               </font></Button>
            <Region HBox.hgrow="ALWAYS" />
            <Button mnemonicParsing="false" styleClass="menubarbutton" text="Pause Game">
               <graphic>
                  <ImageView fitHeight="17.0" fitWidth="17.0" pickOnBounds="true" preserveRatio="true">
                     <image>
                        <Image url="@../../../resources/graphics/pause.png" />
                     </image>
                     <viewport>
                        <Rectangle2D />
                     </viewport>
                  </ImageView>
               </graphic>
               <padding>
                  <Insets bottom="10.0" left="10.0" right="10.0" top="10.0" />
               </padding>
               <font>
                  <Font size="16.0" />
               </font></Button>
         </children>
      </HBox>
   </top>
   <right>
      <VBox fx:id="sidebar" prefWidth="300.0" styleClass="sidebar" BorderPane.alignment="CENTER" />
   </right>

   <stylesheets>
      <URL value="@../generic/GenericStylesheet.css" />
      <URL value="@GameStylesheet.css" />
   </stylesheets>
</BorderPane>
